
@{
}
<h1>@ViewBag.title</h1>

@if (ViewBag.cheeses.Count == 0)
{
    <p>There are no cheeses to Remove</p>
} 
<form method="post">

        @foreach (var cheese in ViewBag.cheeses)
        {
            <input type="checkbox" name="cheeseId" id="@cheese.CheeseId" value="@cheese.CheeseId"/>
            <label for="@cheese.CheeseId">@cheese.Name</label><br/>
        }

    <input type="submit" value="Remove Cheeses" />
</form>
